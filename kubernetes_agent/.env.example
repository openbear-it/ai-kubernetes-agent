# Example environment variables for kubernetes_agent

# LLM provider: 'oai' (Azure OpenAI) or 'ollama'
AGENT_TYPE=ollama

# MCP server URL
MCP_SERVER_URL=http://localhost:8080

# Ollama configuration (if using AGENT_TYPE=ollama)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b

# Azure OpenAI configuration (if using AGENT_TYPE=oai)
OAI_DEPLOYMENT_NAME_GPT_4O=your-deployment-name
OAI_API_KEY=your-api-key
OAI_API_VERSION=2023-05-15
OAI_AZURE_ENDPOINT=https://your-azure-endpoint.openai.azure.com/
